{
  "name": "dawnfire-dashboards",
  "version": "1.0.0",
  "description": "Morning, afternoon, evening, and TV dashboards for Dawnfire",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "dev:frontend": "vite",
    "dev:backend": "NODE_ENV=development node server.js",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "vite build",
    "preview": "vite preview",
    "docker:build": "docker build -t registry.dawnfire.casa/dashboard:latest .",
    "docker:push": "docker push registry.dawnfire.casa/dashboard:latest"
  },
  "keywords": [
    "dashboard",
    "catppuccin",
    "weather",
    "calendar",
    "infrastructure"
  ],
  "author": "Cyrus",
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.4",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
